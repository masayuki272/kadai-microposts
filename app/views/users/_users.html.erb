<!--フォロー、フォロワーの表示のパーシャル-->
<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
    <li class ="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
      <!--Gravatar メールアドレスに対して自分のアバター画像を登録するサービス-->
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'View profile', user_path(user) %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
  <%= paginate users %>
  <!--ページネーション-->
  <% end %>